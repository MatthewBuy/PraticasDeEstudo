<Window x:Class="Text_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_editor"
        mc:Ignorable="d"
        Title="Text editor" Height="350" Width="525">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="525">
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="Open File"/>
                <MenuItem Header="Save File"/>
                <Separator/>
                <MenuItem Header="Close"/>
            </MenuItem>
            <MenuItem Header="View" FontSize="16" >
               
            </MenuItem>
        </Menu>
        <RichTextBox Name="txtBox" SpellCheck.IsEnabled="True" Margin="0,25,0,0" Block.LineHeight="2"/>

    </Grid>
</Window>
